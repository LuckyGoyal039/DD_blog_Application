<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <style>
    @media only screen and (min-width: 768px) {
      .navRight {
        display: flex;
        align-items: center;
      }
      .userOption {
        display: flex;
        justify-content: center;
        align-items: center;
      }
      .createBlogLink{
        padding:0 0 0 10px;
      }
      .loginbtn{
        margin-left: 10px;
      }
    }
  </style>
  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <a class="navbar-brand" href="/home">Open Blogs</a>
      <button
        class="navbar-toggler"
        type="button"
        data-toggle="collapse"
        data-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item active">
            <a class="nav-link" href="/home">Home </a>
          </li>
          <% if(categories.length>0) { %>
          <li class="nav-item dropdown">
            <a
              class="nav-link dropdown-toggle"
              href="#"
              id="navbarDropdown"
              role="button"
              data-toggle="dropdown"
              aria-haspopup="true"
              aria-expanded="false"
            >
              Category
            </a>
            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
              <a class="dropdown-item" href="?filter=All">All</a>
              <% categories.forEach(function(item) { %>
              <a
                class="dropdown-item"
                href="?filter=<%= encodeURIComponent(item)%>"
                ><%=item%></a
              >
              <% }); %>
            </div>
          </li>
          <% }%> <%if(admin) { %>
          <li class="nav-item active">
            <a class="nav-link" href="/admin/manageuser">Manage User</a>
          </li>
          <li class="nav-item active">
            <a class="nav-link" href="/admin/createuser">Create User</a>
          </li>
          <li class="nav-item active">
            <a class="nav-link" href="/admin/auditlogs">AuditLogs</a>
          </li>
          <%}%>
        </ul>
        <div class="navRight">
          <% if(categories.length>0) { %>
          <form class="form-inline my-2 my-lg-0">
            <input
              class="form-control mr-sm-2"
              type="search"
              placeholder="Search"
              aria-label="Search"
              id="filter"
              name="filter"
            />

            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">
              Search
            </button>
          </form>
          <%}%>
          <div>
            <%if(isAuthenticate) { %>
            <div class="userOption">
              <div>
                <a class="createBlogLink d-flex align-items-center" href="/blog/create">
                  <span> Create Blog </span>
                  <span class="material-symbols-outlined"> add </span>
                </a>
              </div>
              <div class="dropdown">
                <button
                  class="btn btn-link"
                  type="button"
                  id="dropdownMenuButton"
                  data-toggle="dropdown"
                  aria-haspopup="true"
                  aria-expanded="false"
                >
                  <span
                    class="material-symbols-outlined"
                    style="font-size: xx-large; color: #279ec6"
                  >
                    account_circle
                  </span>
                </button>
                <div
                  class="dropdown-menu dropdown-menu-right"
                  aria-labelledby="dropdownMenuButton"
                >
                  <a class="dropdown-item" href="/user/logout">Logout</a>
                </div>
              </div>
            </div>
            <% } else {%>

            <div class="loginbtn btn btn-primary">
              <a href="/user/login" style="color:white">Login</a>
            </div>
            <%}%>
          </div>
        </div>
      </div>
    </nav>
  </body>
</html>
